%nav.navbar.navbar-default.navbar-fixed-top
	.container-fluid
		.navbar-header
			%button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#collapsed-items")
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			%a.navbar-brand(href="/list/recent") Starcraft II Overwatch

		#collapsed-items.collapse.navbar-collapse
			%ul.nav.navbar-nav
				-if at_most_recent? then
					%li.active
						%a(href="/list/recent")
							Home
							%span.sr-only (current)
				-else
					%li
						%a(href="/list/recent") Home
				-if at_submit? then
					%li.active
						%a(href="/submit")
							Submit
							%span.sr-only (current)
				-else
					%li
						%a(href="/submit") Submit
			%form.navbar-form.navbar-right(role="search" method="post" action="/search")
				.form-group
					%input.form-control(type="text" placeholder="Search Players" name="player_search")
				%button.btn.btn-default(type="submit") Submit
